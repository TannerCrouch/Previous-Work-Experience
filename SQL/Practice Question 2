INSERT INTO mytable(VELOCITY,VOLUME,SALES) VALUES ('E','VERY HIGH',96);
INSERT INTO mytable(VELOCITY,VOLUME,SALES) VALUES ('B','HIGH',827);

WITH DATATABLE AS (
WITH C1 AS (
  	SELECT [velocity], [volume], [sales]
  	FROM mytable),
  C2 AS (
    SELECT [velocity], [volume], [sales]
  	FROM mytable
    WHERE volume = 'VERY HIGH'),
  C3 AS 
   (SELECT [velocity], [volume], [sales]
  	FROM mytable
    WHERE volume = 'HIGH'),
   C4 AS (
     SELECT [velocity], [volume], [sales]
  	FROM mytable
     WHERE volume = 'MEDIUM-HIGH'),
   C5 AS (
     SELECT [velocity], [volume], [sales]
  	FROM mytable
     WHERE volume = 'MEDIUM-LOW'),
    C6 AS (
      SELECT [velocity], [volume], [sales]
  	  FROM mytable
      WHERE volume = 'LOW'),
    C7 AS (
      SELECT [velocity], [volume], [sales]
  	  FROM mytable
      WHERE volume = 'VERY LOW')
    
   
     
SELECT  DISTINCT C1.velocity AS velocity, C2.sales AS 'VERY HIGH', C3.sales AS 'HIGH', C4.sales AS 'MEDIUM-HIGH', C5.sales AS 'MEDIUM_LOW', C6.sales AS 'LOW', 
C7.SALES AS 'VERY LOW', SUM(C1.sales) AS 'TOTAL'
FROM C1
INNER JOIN C2 ON C1.velocity = C2.velocity
INNER JOIN C3 ON C1.velocity = C3.velocity
INNER JOIN C4 ON C1.velocity = C4.velocity
INNER JOIN C5 ON C1.velocity = C5.velocity
INNER JOIN C6 ON C1.velocity = C6.velocity
INNER JOIN C7 ON C1.velocity = C7.velocity
GROUP BY C1.velocity 
  )
 
SELECT * FROM DATATABLE
 UNION ALL
 select 'Total' velocity, SUM([VERY HIGH]), sum([HIGH]), sum([MEDIUM-HIGH]), sum([MEDIUM_LOW]), sum([LOW]), sum([VERY LOW]), sum([TOTAL]) FROM DATATABLE;
